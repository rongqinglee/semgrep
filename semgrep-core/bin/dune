(executables
 (names Main main_spatch)
 (libraries
    str
    dyp
    parmap
    ppx_deriving.runtime
    uucp uutf

    ; pfff deps
    commons commons_core commons_ocollection
    pfff-config
    pfff-h_program-lang
    pfff-lang_python pfff-lang_python-analyze
    pfff-lang_js pfff-lang_js-analyze
    pfff-lang_json
    pfff-lang_cpp pfff-lang_cpp-analyze
    pfff-lang_c pfff-lang_c-analyze
    pfff-lang_ml pfff-lang_ml-analyze
    pfff-lang_java pfff-lang_java-analyze
    pfff-lang_go pfff-lang_go-analyze
    pfff-lang_ruby pfff-lang_ruby-analyze
    pfff-lang_php
    pfff-lang_lisp
    pfff-lang_skip
    pfff-lang_FUZZY

    ; tree-sitter deps
    tree-sitter-lang.ruby
    tree-sitter-lang.java

    ; internal deps
    semgrep_utils
    semgrep_core
    semgrep_fuzzy
    semgrep_finding
    semgrep_parsing
    semgrep_matching
    semgrep_tainting
    semgrep_analyzing
    semgrep_reporting
    semgrep_synthesizing
    spacegrep
 )
 (preprocess (pps ppx_profiling))
 ; for ocamldebug
 (modes byte)
 (flags (:include flags.sexp))
)


; use bin/flags.sh to generate the OS specific build flags
(rule
 (targets flags.sexp)
 (action (run %{workspace_root}/bin/flags.sh)))


(install
 (package semgrep)
 (section bin)
 (files (Main.exe as semgrep-core) (main_spatch.exe as spatch))
)
